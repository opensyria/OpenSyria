                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link" href="/?lang=<%= lang %>"><%= t.nav.home %></a></li>
                    <li class="nav-item"><a class="nav-link" href="/download?lang=<%= lang %>"><%= t.nav.download %></a></li>
                    <li class="nav-item"><a class="nav-link" href="https://explorer.opensy.net?lang=<%= lang %>" target="_blank"><%= t.nav.explorer %></a></li>
                    <li class="nav-item"><a class="nav-link" href="/community?lang=<%= lang %>"><%= t.nav.community %></a></li>
                    <li class="nav-item"><a class="nav-link active" href="/docs?lang=<%= lang %>"><%= t.nav.docs %></a></li>
                </ul>
